                        </li>
                        <li>
                            @Html.ActionLink(MFMElectronique.Views.Shared.Resources.Purchases, "Index", "Products")
                        </li>
                        <li>
                            @if(User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                            {
                                @Html.ActionLink("Admin", "Index", "Admin")
                            }
                        </li>
                    </ul>
                </div>
            </div>
            <div class="header-bottom-right">
                <div class="search">
                    @using (Html.BeginForm("SearchIndex", "Products", FormMethod.Post))
                    {
                        @Html.TextBox("SearchString", "", new { @class = "textbox", Value = "Search", onfocus = "this.value = '';", onblur = "if (this.value == '') {this.value = 'Search';}" })
                        <input type="submit" value="Search" id="submit" name="submit">
                    }
                </div>

                <div class="tag-list">
                    <ul class="last">
                        <li>
                            @{
                                Html.RenderAction("CartSummary", "ShoppingCart");
                            }
                        </li>
                    </ul>
                    </div>
                
            </div>
            <div class="clear"></div>
        </div>
